# C++17 is required for constexpr if and std::is_same_v
CXX_STD = CXX17

# -O2 ensures optimization is enabled (required for _FORTIFY_SOURCE)
PKG_CPPFLAGS = -U_FORTIFY_SOURCE
PKG_CXXFLAGS = $(shell "$(R_HOME)/bin/Rscript" -e "cat(paste0('-I\"', system.file('include', package='data.table'), '\"'))")
